{
  "root": true, // This is the top-most config file
  "extends": "airbnb", // Inherit from some sensible rules
  "rules": {
    "class-methods-use-this": 0, // Disable this rule as it forces all class methods to use the "this" keyword within them
    "indent": [
      "error",
      4
    ]
  },
  "env": {
    "browser": true,
    "jest": true
  }
}
